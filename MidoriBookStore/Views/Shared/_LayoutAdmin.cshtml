<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Midori Book Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='https://fonts.googleapis.com/css?family=Montserrat|Cardo' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <link href="@Url.Content("~/Content/css_admin/header_admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/js_admin/js_header.js")"
            type="text/javascript"></script>
    <link href="@Url.Content("~/Content/footer.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css_admin/button_admin.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css_admin/share_admin.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/Content/footer-distributed-with-address-and-phones.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
</head>
<body>
    <div class="hdfull">
        <header class="main_h">

            <div class="row">
                <a class="logo" href="#">MIDORI</a>

                <div class="mobile-toggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>

                <nav>
                    <ul>
                        <li>@Html.ActionLink("Author", "Index", "Authors")</li>
                        <li>@Html.ActionLink("Publisher", "Index", "Publishers")</li>
                        <li>@Html.ActionLink("Book", "Index", "Books")</li>
                        <li>@Html.ActionLink("Account", "Index", "Users")</li>
                        <li>@Html.ActionLink("Response", "Index", "UserResponses")</li>
                        <li><button class="btn draw-border">LOG OUT</button></li>
                    </ul>
                </nav>
                
            </div> <!-- / row -->

        </header>

        <div class="hero">

            <h1><span>Welcome Administrator</span><br>Midori Book Store</h1>

            <div class="mouse">
                <span></span>
            </div>

        </div>
    </div>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>
    <footer class="footer-distributed">

        <div class="footer-left">

            <h3>Midori<span>BookStore</span></h3>

            <p class="footer-links">
                <a href="/Home/Index">Home</a>
                ·
                <a href="#">Blog</a>
                ·
                <a href="#">Pricing</a>
                ·
                <a href="/Home/About">About</a>
                ·
                <a href="#">Faq</a>
                ·
                <a href="/Home/Contact">Contact</a>
            </p>

            <p class="footer-company-name">Midori Book Store &copy; 2019</p>
        </div>

        <div class="footer-center">

            <div>
                <i class="fa fa-map-marker"></i>
                <p><span>SE1209 FPT University</span> Hola, Vietnam</p>
            </div>

            <div>
                <i class="fa fa-phone"></i>
                <p>+84 123456 1209</p>
            </div>

            <div>
                <i class="fa fa-envelope"></i>
                <p><a href="mailto:support@midori.com">support@midori.com</a></p>
            </div>

        </div>

        <div class="footer-right">

            <p class="footer-company-about">
                <span>About this website</span>
                We create the website to get the good grade from our teacher - LE PHUONG CHI.
            </p>

            <div class="footer-icons">

                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-github"></i></a>

            </div>

        </div>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>